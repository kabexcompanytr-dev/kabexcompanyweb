Options +FollowSymLinks -MultiViews
RewriteEngine On
RewriteBase /

# 1. Uzantıyı ( .html ) açıkça yazanları uzantısız hale yönlendir (Yönlendirme)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+(.*)\.html [NC]
RewriteRule ^ /%1 [R=301,L]

# 2. flortzone/gizlilik-politikasi -> fz-privacy.html (Gölge Maskeleme)
RewriteRule ^flortzone/gizlilik-politikasi$ fz-privacy.html [NC,L]

# 3. flortzone/kullanim-kosullari -> fz-terms.html (Gölge Maskeleme)
RewriteRule ^flortzone/kullanim-kosullari$ fz-terms.html [NC,L]

# 4. Dosya varsa ama uzantı yazılmadıysa arkadan .html ekle
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]